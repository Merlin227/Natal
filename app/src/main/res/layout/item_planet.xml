<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:layout_margin="8dp"
    android:padding="20dp">

    <!-- Заголовок планеты -->
    <TextView
        android:id="@+id/planetName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Солнце (сознание, эго, жизненная сила, индивидуальность)"
        android:textColor="#FFD700"
        android:textSize="20sp"
        android:textStyle="bold"
        android:letterSpacing="0.02" />

    <!-- Разделитель -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="#333333" />

    <!-- Контейнер для знака и дома -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <!-- Знак зодиака -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Знак"
                android:textColor="#888888"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/zodiacSign"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Рак"
                android:textColor="#4FC3F7"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Вертикальный разделитель -->
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#333333" />

        <!-- Дом -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Дом"
                android:textColor="#888888"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/housePosition"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="12-й дом"
                android:textColor="#BA68C8"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>




    <TextView
        android:id="@+id/planetDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Тайное творчество, духовная энергия, потребность в уединении, служение без признания"
        android:textSize="15sp"
        android:textColor="#E0E0E0"
        android:lineSpacingExtra="6dp"
        android:padding="12dp"
        android:background="#1A1A1A"
        android:gravity="center"
        android:layout_marginTop="8dp"/>

</LinearLayout>