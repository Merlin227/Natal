<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_margin="8dp"
    android:clickable="false"
    android:focusable="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/postCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Категория"
                android:textSize="12sp"
                android:textColor="#4CAF50"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/category_background"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/postTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2 часа назад"
                android:textSize="12sp"
                android:textColor="#888888"
                android:gravity="end"/>

        </LinearLayout>


        <TextView
            android:id="@+id/postTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Заголовок поста"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>


        <TextView
            android:id="@+id/postAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Автор: Неизвестно"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="12dp"/>


        <TextView
            android:id="@+id/postContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Содержание поста..."
            android:textSize="16sp"
            android:textColor="#000000"
            android:maxLines="3"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="16dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="16dp">

                <!-- Используем ImageView вместо ImageButton -->
                <ImageView
                    android:id="@+id/upvoteButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_thumb_up"
                    android:padding="4dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Лайк"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

                <TextView
                    android:id="@+id/upvotesCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/downvoteButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_thumb_down"
                    android:padding="4dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Дизлайк"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

                <TextView
                    android:id="@+id/downvotesCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginStart="4dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <!-- Комментарии -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/commentButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_comment"
                    android:padding="4dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Комментарии"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

                <TextView
                    android:id="@+id/commentsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginStart="4dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>