<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp"
    tools:context=".RegistrationActivity">

    <!-- Заголовок -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_zodiac_circle"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="НАТАЛЬНАЯ КАРТА"
            android:textColor="#80FFFFFF"
            android:textSize="14sp"
            android:letterSpacing="0.1"
            android:textAllCaps="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Регистрация"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />
    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Поле логина -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/loginInputLayout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="     Логин"
                app:boxBackgroundColor="#1AFFFFFF"
                app:boxStrokeColor="#80FFFFFF"
                app:endIconMode="clear_text"
                app:endIconTint="#FFFFFF"
                app:hintTextColor="#B3FFFFFF"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="#FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/regTextLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Поле пароля -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordInputLayout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="    Пароль"
                app:boxBackgroundColor="#1AFFFFFF"
                app:boxStrokeColor="#80FFFFFF"
                app:endIconMode="password_toggle"
                app:endIconTint="#FFFFFF"
                app:hintTextColor="#B3FFFFFF"
                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="#FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/regTextPas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cityContainer"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Город рождения"
                app:boxBackgroundColor="#1AFFFFFF"
                app:boxStrokeColor="#80FFFFFF"
                app:endIconMode="dropdown_menu"
                app:endIconTint="#FFFFFF"
                app:hintTextColor="#B3FFFFFF"
                app:startIconDrawable="@drawable/ic_location"
                app:startIconTint="#FFFFFF">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:minHeight="56dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:spinnerMode="dropdown"
                    android:textColor="#000000" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Дата рождения -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_birth_date"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="      Дата рождения"
                app:boxBackgroundColor="#1AFFFFFF"
                app:boxStrokeColor="#80FFFFFF"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_calendar"
                app:endIconTint="#FFFFFF"
                app:hintTextColor="#B3FFFFFF"
                app:startIconDrawable="@drawable/ic_cake"
                app:startIconTint="#FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/regTextDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:inputType="date"
                    android:focusable="false"
                    android:clickable="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Время рождения -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_birth_time"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="     Время рождения"
                app:boxBackgroundColor="#1AFFFFFF"
                app:boxStrokeColor="#80FFFFFF"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_time"
                app:endIconTint="#FFFFFF"
                app:hintTextColor="#B3FFFFFF"
                app:startIconDrawable="@drawable/ic_clock"
                app:startIconTint="#FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/timeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:inputType="time"
                    android:focusable="false"
                    android:clickable="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Кнопки -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:fontFamily="sans-serif-medium"
                android:text="Зарегистрироваться"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_user_add"
                app:iconPadding="8dp"
                app:iconGravity="textStart"
                style="@style/Widget.Material3.Button"
                android:backgroundTint="#FFFFFF"
                android:textColor="#302B63"
                android:layout_marginTop="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:fontFamily="sans-serif-medium"
                android:text="Уже есть аккаунт? Войти"
                android:textAllCaps="false"
                android:textSize="14sp"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_login"
                app:iconPadding="8dp"
                app:iconGravity="textStart"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="#FFFFFF"
                app:strokeWidth="1dp"
                android:textColor="#FFFFFF"
                android:backgroundTint="?attr/colorSurface"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>